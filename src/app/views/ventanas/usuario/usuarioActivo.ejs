<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/resource/usuario/registrarUsuario.css">
    <link rel="stylesheet" href="/resource/main/main.css">
    <link rel="stylesheet" href="/resource/usuario/usuarioActivo.css">
    <title>Registrar Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/a741909309.js" crossorigin="anonymous"></script>
</head>
<body>

    <%- include('../../template/header.ejs')  %> 

    <section class="sectionUser">
        <h3 class="infoSis">Usuarios Activos</h3>
        <table class="table table-bordered border-dark table-striped table-hover">  
            <thead>
              <tr>
                    <th scope="col">Identificac√≠on</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Usuario</th>
                    <th scope="col">Estado</th>
                </tr>
            </thead>
            <tbody>
              <tr>
                    <% for( let i = 0; i < usuario.length; i++ ) { %>
                        <tr>
                            <td><%= usuario[i].idUsuario %> </td>
                            <td><%= usuario[i].nombre %> </td>
                            <td><%= usuario[i].apellido %> </td>
                            <td><%= usuario[i].nombreUsuario %> </td>
                            <td><%= usuario[i].estado %> </td>
                        </tr>
                    <% } %> 
                </tr>
            </tbody>
        </table>
    </section>

    <%- include('../../template/footer.ejs')  %> 

               <!--SWEET ALERT 2-->
               <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

               <% if (typeof alert != "undefined") { %> 
                   <script>
                       Swal.fire({
                           title: '<%= alertTitle %>',
                           text: '<%= alertMessage %>',
                           icon: '<%= alertIcon %>',
                           showConfirmButton: '<%= showConfirmButton %>',
                           timer: <%= timer %>
                       }).then( () => {
                           window.location= '/<%= ruta %>'
                       })
                    </script>
               <% } %>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js" integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
</body>
</html>