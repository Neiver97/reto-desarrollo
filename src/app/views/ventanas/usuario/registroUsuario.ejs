<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/resource/usuario/registrarUsuario.css">
    <link rel="stylesheet" href="/resource/main/main.css">
    <title>Registrar Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/a741909309.js" crossorigin="anonymous"></script>
</head>
<body>

    <%- include('../../template/header.ejs')  %> 

    <section class="sectionC" style="background-image:url('/resource/usuario/utils/empresa.jpg')">
        <h3 class="dataInfoP fw-bold">Registrar Usuario</h3>
        <form class="container forCotn" action="/datosUsuario" method="POST">
            <div class="col colL">
                <div class="row">
                    <label for="formGroupExampleInput" class="form-label fw-bolder ">Número de identificacíon *</label>
                    <input type="text" class="form-control" name="id" placeholder="Número de identificacíon" aria-label="First name">
                </div>
                <div class="row">
                    <label for="formGroupExampleInput" class="form-label fw-bolder mt-1">Nombre * </label>
                    <input type="text" class="form-control" name="nombre" placeholder="Nombre" aria-label="First name">
                </div>
                <div class="row">
                    <label for="formGroupExampleInput" class="form-label fw-bolder mt-1 mt-1">Apellido *</label>
                    <input type="text" class="form-control" name="apellido" placeholder="Apellido" aria-label="First name">
                </div>
                <div class="botones">
                    <button type="submit" class="btn btn-secondary btn-lg">Enviar</button>
                    <a type="button" href="/main" class="btn btn-secondary btn-lg">Inicio</a>
                </div>

            </div>
            <div class="col colR">
                <div class="row">
                    <label for="formGroupExampleInput" class="form-label fw-bolder mt-1">Usuario *</label>
                    <input type="text" class="form-control" name="usuario" placeholder="Usuario" aria-label="First name">
                </div>
                <div class="row">
                    <label for="formGroupExampleInput" class="form-label fw-bolder">Contraseña*</label>
                    <input type="password" class="form-control" name="password" placeholder="Contraseña" aria-label="First name">
                </div>
                <div class="row">
                    <label for="formGroupExampleInput" class="form-label fw-bolder mt-1">Estado</label>
                    <select id="Horario" name="horario" class="form-select">
                        <option selected>Seleccionar</option>
                        <option>Activo</option>
                        <option>Inactivo</option>
                    </select>
                </div>
            </div>
        </form>
    </section>

    <%- include('../../template/footer.ejs')  %> 

               <!--SWEET ALERT 2-->
               <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

               <% if (typeof alert != "undefined") { %> 
                   <script>
                       Swal.fire({
                           title: '<%= alertTitle %>',
                           text: '<%= alertMessage %>',
                           icon: '<%= alertIcon %>',
                           showConfirmButton: '<%= showConfirmButton %>',
                           timer: <%= timer %>
                       }).then( () => {
                           window.location= '/<%= ruta %>'
                       })
                    </script>
               <% } %>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js" integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
</body>
</html>